<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dip"
    android:paddingBottom="4dip"
    android:paddingStart="3dip"
    android:paddingEnd="3dip">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="5dip">

        <TextView
            android:id="@+id/line_number"
            style="@style/line_number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/codebreaker_panel_place0"
            style="@style/play_choice_rdo_text" />

        <ImageView
            android:id="@+id/codebreaker_panel_place1"
            style="@style/play_choice_rdo_text" />

        <ImageView
            android:id="@+id/codebreaker_panel_place2"
            style="@style/play_choice_rdo_text" />

        <ImageView
            android:id="@+id/codebreaker_panel_place3"
            style="@style/play_choice_rdo_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="20dip">

        <TextView
            android:id="@+id/eval_black_textview"
            style="@style/eval_text_black"
            android:text="@string/zero" />

        <TextView
            android:id="@+id/eval_white_textview"
            style="@style/eval_text_white"
            android:text="@string/zero" />
    </LinearLayout>

</LinearLayout>
